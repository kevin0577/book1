<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render "info", user: current_user %>
	</div>

	<div class="col-xs-9">
		<h1>Books</h1>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |b| %>
				<tr>
					<td><%= link_to (b.user) %>
						<%= attahment_image_tag(b.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
					</td>
					<td><%= b.title %></td>
					<td><%= b.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>