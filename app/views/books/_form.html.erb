<%= form_for (@newbook) do |f| %>
<%= render "layouts/error", obj: @newbook %>
	<div class="field">
		<%= f.label :Title %>
		<%= f.text_field :title, class: "col-xs-12" %>
	</div>

	<div class="field">
		<%= f.label :Opinion %>
		<%= f.text_area :body, class: "col-xs-12" %>
	</div>

	<div class="actions">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>