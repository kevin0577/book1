<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render "users/info", user: @user %>

		<h2>New book</h2>
		<%= render "form" %>
	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |b| %>
				<tr>
					<td><%= link_to user_path (b.user_id) do %>
						<%= attachment_image_tag(b.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to book_path(b.id) do %>
						<%= b.title %>
						<% end %>
						</td>
					<td><%= b.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>