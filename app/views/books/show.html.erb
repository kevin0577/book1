<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render "users/info", user: @user %>

		<h2>New book</h2>
		<%= render "form" %>
	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table table-hover table-inverse">
			<tbody>
				<tr>
					<td><%= link_to user_path (@user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
						<%= @user.name %>
						<% end %>
					</td>
					<td><%= @book.title %></td>
					<td><%= @book.body %></td>
					<% if @book.user_id == current_user.id %>
					<td><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></td>
					<td><%= link_to "Destroy", book_path, class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
					<% end %>
 				</tr>
			</tbody>
		</table>
	</div>
</div>