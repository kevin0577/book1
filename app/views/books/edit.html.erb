<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
		<h2>Editing Book</h2>

		<%= form_for (@book) do |f| %>
		<%= render "layouts/error", obj: @book %>
			<div class="field">
				<%= f.label :Title %>
				<%= f.text_field :title, class: "col-xs-12" %>
			</div>

			<div class="field">
				<%= f.label :Opinion %>
				<%= f.text_area :body, class: "col-xs-12" %>
			</div>

			<div class="actions">
				<%= f.submit class: "btn btn-primary col-xs-12" %>
			</div>
		<% end %>

		<%= link_to "show", book_path(@book) %>
		<%= link_to "Back", books_path %>
	</div>
</div>